<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta http-equiv='X-UA-Compatible' content='IE=edge' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet'
    integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous' />
  <script src='https://code.jquery.com/jquery-3.7.1.min.js'
    integrity='sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=' crossorigin='anonymous'></script>
  <script type='javascript'>
      $.fn.digits = function(){ return this.each(function(){ $(this).text(
      $(this).text().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,") ); }) };
    </script>
</head>

<body>
  <div class='booking__detail-container'>
    <div class='row'>
      <div class='col-12'>
        <h1 class='m-0'>Hotel - {{booking.hotel.name}}</h1>
      </div>
    </div>
    <div class='row'>
      <div class='col-12'>
        <strong>Dirección</strong>
        {{booking.hotel.address}}
      </div>
      <div class='col-12'>
        <strong>Teléfono</strong>
        {{booking.hotel.phone}}
      </div>
    </div>
    <div class='row'>
      <div class='col-12'>
        <h1 class='m-0'>Habitación</h1>
      </div>
    </div>
    <div class='row'>
      <div class='col-12'><strong>#</strong> {{booking.room.number}}</div>
      <div class='col-12'>
        <strong>Tipo</strong>
        {{booking.room.roomType.type}}
      </div>
      <div class='col-12'>
        <strong>Precio</strong>
        <span class='currencyFormat'>{{booking.total}}</span>
        <script>$('.currencyFormat').digits();</script>
      </div>
    </div>
    <div class='row'>
      <div class='col-12'>
        <h1 class='m-0'>Fechas</h1>
      </div>
    </div>
    <div class='row'>
      <div class='col-12'><strong>Ingreso</strong> {{booking.checkin}}</div>
      <div class='col-12'><strong>Salida</strong> {{booking.checkout}}</div>
    </div>
    <div class='row'>
      <div class='col-12'>
        <h1 class='m-0'>Contacto de emergencia</h1>
      </div>
    </div>
    <div class='row'>
      <div class='col-12'><strong>Nombre</strong> {{booking.fullName}}</div>
      <div class='col-12'><strong>Teléfono</strong> {{booking.phone}}</div>
    </div>
    <div class='row'>
      <div class='col-12'>
        <h1 class='m-0'>Pasajeros</h1>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-12'>
      <table>
        <thead>
          <th>Nombres</th>
          <th>Apellidos</th>
          <th>Tipo documento</th>
          <th>Documento</th>
          <th>Género</th>
          <th>Correo</th>
          <th>Teléfono</th>
        </thead>
        <tbody>
          {{#each booking.guests}}
          <tr>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.documentType.name}}</td>
            <td>{{this.document}}</td>
            <td>{{this.gender.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>